<h3>My Lists</h3>

<table class="table">
  <thead>
    <tr>
      <th>List Name</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.label %></td>
        <td><%= link_to 'Show', list %> | 
        <%= link_to 'Edit', edit_list_path(list) %> | 
        <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
